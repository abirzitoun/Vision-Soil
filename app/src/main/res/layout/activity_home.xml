<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/back">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/connect"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/bluetooth_icon"
                android:contentDescription="Connect Bluetooth Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect Bluetooth"
                android:textColor="#000000"
                android:textSize="24sp"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Robot Control -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/Robot"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/control"
                android:contentDescription="Robot Control Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robot Control"
                android:textColor="#000000"
                android:textSize="26sp"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Data Visualization -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/Data"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/data"
                android:contentDescription="Data Visualization Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Visualization"
                android:textColor="#000000"
                android:textSize="24sp"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Irrigation Planning -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/Planning"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/irrigation"
                android:contentDescription="Irrigation Planning Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Irrigation Planning"
                android:textColor="#000000"
                android:textSize="24sp"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>